{
  "name": "booking-website",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently \"npm run app:dev\" \"npm run api:dev\"",
    "app:dev": "npm run dev --workspace=apps/app",
    "api:dev": "npm run dev --workspace=apps/api",
    "app:build": "npm run build --workspace=apps/app",
    "api:build": "npm run build --workspace=apps/api",
    "app:deploy": "npm run deploy --workspace=apps/app",
    "api:deploy": "npm run deploy --workspace=apps/api",
    "deploy": "npm run app:deploy && npm run api:deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "eslint": "^9.16.0"
  }
}
