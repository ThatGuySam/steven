{
  "name": "steven",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "concurrently \"npm run app:dev\" \"npm run api:dev\"",
    "app:dev": "npm run dev --workspace=apps/app",
    "api:dev": "npm run dev --workspace=apps/api",
    "app:build": "npm run build --workspace=apps/app",
    "build": "npm run app:build",
    "deploy": "npm run build && wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "eslint": "^9.16.0",
    "wrangler": "^4.0.0"
  }
}
